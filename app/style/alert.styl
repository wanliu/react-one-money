@import 'color.styl'

.alert-wrap
  position fixed
  z-index 9
  top 0
  bottom 0
  left 0
  right 0
  background-color rgba(0, 0, 0, 0.5)
      
  .alert-container
    position absolute
    width 280px
    margin-left -140px
    left 50%
    top 28%
    border 5px solid #E74C3C
    padding 10px
    border-radius 5px
    background-color #ECF0F1
  .title
    font-size 2.4rem
    font-weight 900
    color $red
    padding 0 30px
    text-align center
    &.red
      color $red
    &.gray
      color $gray
  .message
    font-size 1.6rem
    padding: 10px 0
    text-align center
    color $gray
  .url-btn
    text-decoration none
    display inline-block
    color #FFF
    background-color $red
    padding 10px 13px
    border-radius 5px
    
  .close-btn
    width 30px
    height 30px
    border-radius 50%
    color #FFF
    line-height 30px
    text-align center
    background-color #2C3E50
    display block
    position absolute
    right 5px
    top 5px
    font-size 2rem
    
  
  
  