@import 'color.styl'

.alert-wrap
  position absolute
  z-index 9
  top 0
  bottom 0
  left 0
  right 0
  background-color rgba(0, 0, 0, 0.5)
  .alert-container
    position absolute
    width 280px
    margin-left -140px
    left 50%
    top 35%
    border 5px solid #E74C3C
    padding 10px
    height 170px
    border-radius 5px
    background-color #ECF0F1
  .close-btn
    width 30px
    height 30px
    border-radius 50%
    color #FFF
    line-height 30px
    text-align center
    background-color #2C3E50
    display block
    position absolute
    right 5px
    top 5px
    font-size 2rem
    
  
  
  