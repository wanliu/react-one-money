@import 'color.styl'

.detail-page
  padding-bottom 50px
  .detail-top
    position relative

  .detail-imgs
    width 100%
    display block
    
  .info-top
    position relative
    
    .start-end
      background-color #FF0
      

    .table
      height 50px
      background $red
      color #FFF
    .logo
      color #FF0
      font-size 2rem
      font-weight 900
    .right
      color #FF0
      font-weight 900
      width 55%
      text-align left
      line-height 1rem
    .yellow
      font-size 1.4rem
      line-height 1.6rem
      
    .time-number
      width 1.3rem
      text-align center
      font-size 1.6rem
      line-height 1.6rem
      background-color #FF0
      color $red
      border-radius 3px
      display inline-block
      padding 2px
      margin 1px
    .day
      font-size 1.4rem
      font-weight 900
    .colon
      font-size 3rem
      line-height 1.6rem
      vertical-align top
      
  .info-main
    color #666
    width 100%
    padding 10px 0
    border-bottom 1px solid #DDD
    .title
      text-align left
      margin 10px
      overflow hidden
      text-overflow: ellipsis
      display -webkit-box
      -webkit-line-clamp 2
      -webkit-box-orient vertical
    .min
      border-left 1px solid #DDD
      width 20%
  .shop
    padding 8px
    color #555
    .avatar
      margin-right 5px
      
  .winner-wrap
    padding 5px
    border-bottom 1px solid #DDD
    &:after
      content ''
      display block
      clear both
    .winner
      float left
      padding 3px
  .avatar
    border 1px solid #EEE
    width 40px
    height 40px
    vertical-align middle

  