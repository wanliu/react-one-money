@import 'color.styl'

.detail-page
  padding-bottom 50px
  z-index 3
  
  .dr-img
    display block
    margin auto
    width 35%
  .dr-text
    text-align center
    color $gray

  .detail-top
    position relative
  .image-box
    position relative

  .mailing-fee
    position absolute
    bottom 40px
    right 10px
    width 30%
    z-index 3
  .mailing-fee-text
    text-align center
    padding 10px
    border-bottom 1px solid #ddd
    span
      color #fff
      font-size 16px
      background-color $red
      border 1px solid $red
      padding 1px 3px
      border-radius 3px
  .detail-imgs
    width 100%
    display block
    min-height 300px
    
  .info-top
    position relative
    .start-end-wrap
      font-size 1.4rem
      white-space nowrap
      position absolute
      top -2.5rem
      width 100%
      text-align center
      &:after
        content ''
        display block
        height 0.5rem
        background-color #FED931
        width 100%
        position absolute
        bottom 0
      .start-end
        white-space nowrap
        background-color #FED931
        color $red
        line-height 2.5rem
        vertical-align top
        display inline-block
        font-weight 900
      .wings
        height 2rem
        display inline-block

    .table
      height 50px
      background $red
      color #FFF
    .logo
      color #FF0
      font-size 2rem
      font-weight 900
    .right
      white-space nowrap
      color #FF0
      font-weight 900
      width 55%
      text-align left
      line-height 1rem
    .yellow
      font-size 1.4rem
      line-height 1.6rem
      
    .time-number
      width 1.3rem
      text-align center
      font-size 1.6rem
      line-height 1.6rem
      background-color #FF0
      color $red
      border-radius 3px
      display inline-block
      padding 2px
      margin 1px
    .day
      font-size 1.4rem
      font-weight 900
    .colon
      font-size 3rem
      line-height 1.6rem
      vertical-align top
      
  .info-main
    font-size 1.4rem
    color #666
    width 100%
    padding 10px 0
    border-bottom 1px solid #DDD
    .title
      text-align left
      padding 10px
      // text-overflow: ellipsis
      // display -webkit-box
      // -webkit-line-clamp 2
      // -webkit-box-orient vertical
    .min
      border-left 1px solid #DDD
      width 20%
  .shop
    text-decoration none
    display block
    padding 8px
    color #555
    margin-bottom 10px
    border-bottom 1px solid #DDD
    
    .avatar
      margin-right 5px
      
  .winner-wrap
    padding 5px
    border-bottom 1px solid #DDD

    .winner-list:after
      content ''
      display table
      clear both

    .winner
      float left
      padding 3px

    .share-summary
      color $red

    .seed-count
      margin 0 3px
      font-size 16px
      font-weight 700

  .avatar
    border 1px solid #EEE
    width 40px
    height 40px
    vertical-align middle

.action-bars
  position absolute
  bottom 0
  display table
  width 100%
  left 0
  height 50px
  z-index 10

  .grab-more, .grab-again
    display table-cell
    line-height 50px
    width 50%
    color #FFF
    font-size 2rem
    text-align center

  .grab-more
    background-color $blue

  .grab-again
    background-color $green


  