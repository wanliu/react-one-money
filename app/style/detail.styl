.detail-page
  padding-bottom 50px
  .detail-top
    position relative

  .detail-imgs
    width 100%
    display block
    
  .info
    position relative
  .table
    display table
    width 100%
    height 50px
    background #F00
    color #FFF
    .cell
      display table-cell
      vertical-align middle
      text-align center
      &.logo
        color #FF0
        font-size 2rem
        font-weight 900
      &.right
        width 50%
        padding-left 2rem
        text-align left
        line-height 1rem