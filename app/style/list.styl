@import 'color.styl'

.page-container
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  overflow auto

  .share-link
    display block
    position absolute
    top 0
    background #690019
    padding-bottom 20px
    overflow hidden

    .share-pic
      width 100%

  .close-btn
    position absolute
    top 10px
    right 10px
    z-index 10

  .list-page
    background-color #E00024
    padding-bottom 100px
    transition top 1.5s ease-in-out 0s
    -webkit-transition top 1.5s ease-in-out 0s
    
    .list-poster
      width 100%
      display block
    
  ul.list
    padding 10px
    .price-title
      display block
      margin 10px auto
      height 40px
    .item
      position relative 
      margin-bottom 10px
      background-color #FFF
      > a
        color #666
        display block
      .left
        padding 0
        width 40%
        position relative
        .price-logo
          display block
          position absolute
          width 40%
          height 17%
          top 8px
          left 8px
        .mailing-fee
          position absolute
          bottom 15px
          right 15px
          width 33%
        .avatar
          width 100%
          display block
          min-height 100px
          border 1px solid transparent
      .right
        top 0
        left 40%
        right 0
        padding 10px
        height 100%
        position absolute

        .title
          margin 0
          font-size 1.4rem
          display -webkit-box
          overflow hidden
          text-overflow ellipsis
          -webkit-line-clamp 2
          -webkit-box-orient vertical
        .price
          color #F00
          font-size 2rem
          font-weight 900
          margin-right 1rem

    


    