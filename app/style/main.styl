@import 'home.styl'
@import 'list.styl'
@import 'detail.styl'

*
  box-sizing border-box

html
  min-height 100%
  position relative
  font-size 62.5%

body
  margin 0

ul
  list-style none
  margin 0
  padding 0  
  
ul.nav
  z-index 9
  position fixed
  top 0
  &:after
    content ''
    display block
    clear both
  li
    float left
    a
      display block
      padding 10px 20px
      background-color rgba(0,0,0,.3)
      color #FFF
      &.active
        background-color rgba(0,0,0,.6)

.page
  position absolute
  top 0
  left 0
  min-height 100%

.example-enter
  opacity 0.01
  transform translateY(100%)

.example-enter.example-enter-active
  opacity 1
  transform translateY(0%)
  transition all 500ms

.example-leave
  opacity 1
  transform translateY(0%)

.example-leave.example-leave-active
  opacity 0.01
  transform translateY(-100%)
  transition all 500ms
  

.status-bar
  color #FFF
  bottom 10px
  border-radius 5px
  position absolute
  left 10px
  display inline-block
  padding 10px

  &.btn
    left 0
    bottom 0
    padding 0
    width 100%
    height 50px
    font-size 2rem
    position fixed
    border-radius 0
    line-height 50px
    text-align center
    background-color #666
  &.started
    background-color #F00
  &.wait
    background-color #F60
  &.end
  &.suspend
  &.no-executies
    background-color #666