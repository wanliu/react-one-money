@import 'home.styl'
@import 'list.styl'

*
  box-sizing border-box

html
  min-height 100%
  position relative
  font-size 62.5%

body
  margin 0

ul
  list-style none
  margin 0
  padding 0  
  
ul.nav
  &:after
    content ''
    display block
    clear both
  li
    float left
    a
      display block
      padding 10px 20px
      background-color #555
      color #FFF
      &.active
        background-color #AAA

.example-enter
  opacity 0.01

.example-enter.example-enter-active
  opacity 1
  transition opacity 500ms ease-in

.example-leave
  opacity 1

.example-leave.example-leave-active
  opacity 0.01
  transition opacity 300ms ease-in