@import 'color.styl'
@import 'home.styl'
@import 'list.styl'
@import 'detail.styl'
@import 'alert.styl'

*
  box-sizing border-box

html
  min-height 100%
  position relative
  font-size 62.5%

body
  margin 0

ul
  list-style none
  margin 0
  padding 0  
  
ul.nav
  z-index 9
  position fixed
  top 0
  &:after
    content ''
    display block
    clear both
  li
    float left
    a
      display block
      padding 10px 20px
      background-color rgba(0,0,0,.3)
      color #FFF
      &.active
        background-color rgba(0,0,0,.6)

.table
  display table
  width 100%
  .cell
    display table-cell
    vertical-align middle
    text-align center
        
.page
  position absolute
  top 0
  left 0
  width 100%
  min-height 100%
  z-index 1

.page-enter
  transform translateY(-100%)

.page-enter.page-enter-active
  transform translateY(0%)
  transition all 500ms

.page-leave
  transform translateY(0%)

.page-leave.page-leave-active
  transform translateY(100%)
  transition all 500ms
  

.fade-enter
  opacity 0.01

.fade-enter.fade-enter-active
  opacity 1
  transition all 500ms

.fade-leave
  opacity 1

.fade-leave.fade-leave-active
  opacity 0.01
  transition all 500ms
  

.status-bar
  color #FFF
  left 10px
  bottom 10px
  padding 10px
  border-radius 5px
  transition all 500ms
  position absolute
  display inline-block
  background-color $gray
  white-space nowrap

  &.btn
    left 0
    bottom 0
    padding 0
    width 100%
    height 50px
    font-size 2rem
    position fixed
    border-radius 0
    line-height 50px
    text-align center
  &.wait
    background-color $orange
  &.started
    background-color $red
  &.pending
    background-color $green