@import 'color.styl'

*
  box-sizing border-box
  -webkit-overflow-scrolling touch

html
  width 100%
  height 100%
  position relative
  overflow hidden
  font-size 62.5%

body
  font-size 1.4rem
  margin 0

ul
  list-style none
  margin 0
  padding 0  
  
ul.nav
  z-index 9
  position fixed
  top 0
  &:after
    content ''
    display block
    clear both
  li
    float left
    a
      display block
      padding 10px 20px
      background-color rgba(0,0,0,.3)
      color #FFF
      &.active
        background-color rgba(0,0,0,.6)

.table
  display table
  width 100%
  .cell
    display table-cell
    vertical-align middle
    text-align center
        
.page
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow-y scroll
  z-index 1
  background-color #FFF

.status-bar
  color #FFF
  left 10px
  bottom 10px
  padding 6px 10px
  border-radius 5px
  transition all 1s
  position absolute
  display inline-block
  background-color $orange
  white-space nowrap

  &.btn
    left 0
    bottom 0
    padding 0
    width 100%
    height 50px
    font-size 2rem
    position absolute
    border-radius 0
    line-height 50px
    text-align center
    z-index 3
  &.end
    background-color $gray
  &.wait
  &.waiting
    background-color $orange
  &.started
    background-color $red
    &:not(.btn)
      animation started 100ms 13
  &.pending
    background-color $green
    
@keyframes started
  0%
    transform rotate(3deg)
  100%
    transform rotate(-3deg)

@import 'transition.styl'
@import 'home.styl'
@import 'list.styl'
@import 'detail.styl'
@import 'alert.styl'
@import 'share.styl'
