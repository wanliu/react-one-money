@import 'home.styl'
@import 'list.styl'
@import 'detail.styl'

*
  box-sizing border-box

html
  min-height 100%
  position relative
  font-size 62.5%

body
  margin 0

ul
  list-style none
  margin 0
  padding 0  
  
ul.nav
  &:after
    content ''
    display block
    clear both
  li
    float left
    a
      display block
      padding 10px 20px
      background-color #555
      color #FFF
      &.active
        background-color #AAA

.example-enter
  opacity 0.01

.example-enter.example-enter-active
  opacity 1
  transition opacity 500ms ease-in

.example-leave
  opacity 1

.example-leave.example-leave-active
  opacity 0.01
  transition opacity 300ms ease-in
  

.status-bar
  color #FFF
  bottom 10px
  border-radius 5px
  position absolute
  left 10px
  display inline-block
  padding 10px

  &.btn
    left 0
    bottom 0
    padding 0
    width 100%
    height 50px
    font-size 2rem
    position fixed
    border-radius 0
    line-height 50px
    text-align center
    background-color #666
  &.started
    background-color #F00
  &.wait
    background-color #F60
  &.end
  &.suspend
  &.no-executies
    background-color #666